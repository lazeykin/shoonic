{
    "extends": "../tslint.json",
    "rules": {
        "whitespace": [true, "check-branch", "check-operator", "check-typecast"],
        "no-trailing-whitespace": [false],
        "semicolon": [false],
        "indent": [true, "spaces", 4],
        "import-blacklist": [false, "rxjs"],
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ]
    }
}
